<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- JDBC Properties -->
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/lesson18-comma</property>
		<property name="connection.username">root</property>
		<property name="connection.password">Nguyen123</property>


		<!-- Hibernate Properties -->
		<!-- Option to show Hibernate Query as Dialect -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<property name="show_sql">false</property>
		<property name="format_sql">true</property>

		<!-- Set the current session context getCurrentSession -->
		<property name="current_session_context_class">thread</property>

		<!-- Scan Entities -->
		<mapping class="persistence.Project" />
		<mapping class="persistence.Employee" />
		<mapping class="persistence.ProjectEmployee" />
		<mapping class="persistence.Department" />

	</session-factory>

</hibernate-configuration>