<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Join Point ==> Chức năng Advice ==> Aspect(before) Proxy ==> Liên kết 
		và gọi bởi AOP framework -->

	<!-- Step 3: Create/config Aspect Proxy(Join Point, Advice) -->

	<!-- 3.1 Define Join Point -->
	<bean id="movieService" class="javaot.service.MovieService">
		<constructor-arg name="name" value="Avatar"></constructor-arg>
		<constructor-arg name="catalog" value="Adventure"></constructor-arg>
	</bean>

	<!-- 3.2 Define Advisor -->
	<bean id="movieAspectAroundAdvice" class="javaot.aspect.MovieAspectAroundAdvice"></bean>
	<bean id="movieServicePointCut" class="org.springframework.aop.support.NameMatchMethodPointcut">
		<property name="mappedName" value="printName"></property>
	</bean>
	
	<bean id="movieServiceAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="advice" ref="movieAspectAroundAdvice"></property>
		<property name="pointcut" ref="movieServicePointCut" ></property>
	</bean>

	<!-- 
		3. Auto Proxy
		   + connect/execute Advice with Join Point matches PointCut
	-->
	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"></bean>
	
</beans>
